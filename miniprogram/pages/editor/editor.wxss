/* pages/editor/editor.wxss */
@import "../common/lib/weui.wxss";
@import "./assets/iconfont.wxss";

.navigation {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 200rpx;
  display: flex;
  align-items: center;
  box-shadow: rgba(0,129,255,0.2) 0px 0px 5px;
  z-index: 999;
}

.navigation .icon {
  display: inline-block;
  color: white;
}

.navigation input {
  flex: 1;
  background-color: #e5e5e5;
  padding-left: 10rpx;
  border-radius: 4px;
}

.anniu {
  display: flex;
  position: fixed;
  width: 95%;
  z-index: 666;
}

.btbdstk {
  margin-left: 30rpx;
  width: 50%;
}

.bdstk {
  font-size: 30rpx;
  color: #ffffff;
  width: 100%;
  border: 2rpx solid #ffffff;
  border-radius: 15rpx;
  background: #78B8FD;
  height: 95rpx;
  text-align: center;
  line-height: 95rpx;
}

.sqdzk {
  font-size: 30rpx;
  color: #ffffff;
  width: 100%;
  border: 2rpx solid #ffffff;
  border-radius: 15rpx;
  background: #FF7178;
  height: 95rpx;
  text-align: center;
  line-height: 95rpx;
}

.container {
  position: absolute;
  left: 0;
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px;
  border: 1px solid #ffffff;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ffffff;
  border-left: none;
  border-right: none;
  box-shadow: rgba(0,129,255,0.2) 0px 0px 5px;
}

.ql-active {
  color: var(--blue);
}